		"activityBarBadge.background": "#c9f2ad",
		"activityBarBadge.foreground": "#15202b",
		"sash.hoverBorder": "#ea7ba9",
		"statusBar.background": "#e34f8c",
		"statusBar.foreground": "#15202b",
		"statusBarItem.hoverBackground": "#dc236f",
		"statusBarItem.remoteBackground": "#e34f8c",
		"statusBarItem.remoteForeground": "#15202b",
		"titleBar.activeBackground": "#e34f8c",
