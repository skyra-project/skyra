{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"noImplicitAny": false,
		"noEmit": true,
		"incremental": false,
		"baseUrl": ".",
		"paths": {
			"@utils/*": ["../src/lib/util/*"],
			"@lib/*": ["../src/lib/*"],
			"@mocks/*": ["../__mocks__/*"],
			"@root/*": ["../src/*"]
		}
	},
	"include": ["./**/*", "../__mocks__/**/*", "../src/**/*"],
	"references": [{ "path": "../src" }]
}
