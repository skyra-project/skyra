{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"incremental": false,
		"baseUrl": ".",
		"paths": {
			"#utils/*": ["../src/lib/util/*"],
			"#lib/*": ["../src/lib/*"],
			"#languages": ["../src/languages/index"],
			"#mocks/*": ["./mocks/*"],
			"#root/*": ["../src/*"]
		},
		"types": ["vitest/globals"]
	},
	"include": [".", "../src/**/*"],
	"exclude": ["../dist/**/*"],
	"references": [{ "path": "../src" }]
}
