{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2019",
		"noImplicitAny": false,
		"noEmit": true,
		"incremental": false,
		"baseUrl": ".",
		"paths": {
			"#utils/*": ["../src/lib/util/*"],
			"#lib/audio": ["../src/audio/lib"],
			"#lib/*": ["../src/lib/*"],
			"#languages": ["../src/languages/index"],
			"#mocks/*": ["./mocks/*"],
			"#root/*": ["../src/*"]
		}
	},
	"include": [".", "../src/**/*"],
	"references": [{ "path": "../src" }]
}
