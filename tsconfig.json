{
	"extends": "eslint-config-bamboo",
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es2020",
		"types": [
			"node",
			"node-fetch",
			"discord.js",
			"klasa",
			"klasa-dashboard-hooks"
		]
	},
	"include": [
		"./src/**/*",
		"./database/**/*",
		"./config.ts",
		"./config.example.ts"
	],
	"exclude": [
		"**/node_modules",
		"**/build",
		"**/bin",
		"**/out",
		"**/dist",
		"**/coverage"
	]
}
